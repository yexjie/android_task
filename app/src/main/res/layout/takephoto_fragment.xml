<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/e_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入标题"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/t_tag_question"
        android:layout_width="200dp"
        android:layout_height="25dp"

        />
    <TextView
        android:id="@+id/t_tag_important"
        android:layout_width="200dp"
        android:layout_height="25dp"
        />

    <EditText
        android:id="@+id/e_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入问题描述"
        />

    <ImageButton
        android:id="@+id/img_camera"
        android:layout_width="171dp"
        android:layout_height="152dp"
        android:background="@drawable/add"
        android:scaleType="fitXY" />
    <RadioGroup
        android:id="@+id/rg_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_safe"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="安全隐患"
            android:layout_marginRight="20dp"
            />
        <RadioButton
            android:id="@+id/rb_clean"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="卫生问题"
            android:layout_marginRight="20dp"
            />
        <RadioButton
            android:id="@+id/rb_order"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="秩序问题"
            android:layout_marginRight="20dp"
            />
    </RadioGroup>
    <RadioGroup
        android:id="@+id/rg_important"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_important"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="重要"
            android:layout_marginLeft="20dp"
            />
        <RadioButton
            android:id="@+id/rb_normal"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="一般"
            android:layout_marginLeft="100dp"
            />
    </RadioGroup>

    <ImageButton
        android:id="@+id/openMap"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:background="@drawable/location_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="位置信息：" />

    <Button
        android:id="@+id/btn_denglu"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_circle_shape"
        android:text="上传"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>